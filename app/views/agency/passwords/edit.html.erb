<div class="container-fluid login">
  <div class="row text-center">
    <div class="devise-header">
      <div class="text-center">
      </div>
    </div>
  </div>

  <div class="background row">
    <div class="login-box">
    <% flash.each do |name, msg| %>
       <%= content_tag(:div, msg, class: "alert alert-info") %>
     <% end %>

      <div class="title">
        <% provide(:title, 'Forgot password') %>
        <h2>Change your password</h2>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <div class="form-group">
            <div class="input-group">
              <div class="form-inputs">
                <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
              </div>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "Change my password", class: "btn", id:"book-btn" %>
        </div>
      <% end %>

      <%= render "agency/shared/links" %>
  </div>
</div>