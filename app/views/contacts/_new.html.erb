<div class="secondary-section">
	<div class="content">
		
		<%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
			<div class="form-group">
	    	<%= f.label :company_name, "Agency Name" %>
	    	<%= f.text_field :company_name, class: 'form-control', :required => true %>
	    	</div>
			<div class="form-group">
				<%= f.label :contact_name, "Contact Name" %>
				<%= f.text_field :contact_name, class: 'form-control', :required => true %>
			</div>
			<div class="form-group">
				<%= f.label :phone, "Phone Number" %>
				<%= f.text_field :phone, class: 'form-control', :required => true %>
			</div>
			<div class="form-group">
				<%= f.label :email, "Email" %>
	    	<%= f.email_field :email, class: 'form-control', :required => true %>
	    </div>
	    <div class="form-group">
			<%= f.label :start_date, "Start Date" %>
	    	<%= f.date_field :start_date, class: 'form-control', :required => true %>
	    </div>
	    <div class="form-group">
			<%= f.label :end_date, "End Date" %>
	    	<%= f.date_field :end_date, class: 'form-control', :required => true %>
	    </div>
	    <div class="form-group">
	    	<%= f.label :location, "Location" %>
	    	<%= f.text_field :location, class: 'form-control', :required => true %>
	    </div>
	    <div class="form-group">
	    	<%= f.label :amount_of_hours, "Amount of Hours" %>
	    	<%= f.number_field :amount_of_hours, class: 'form-control', :required => true %>
	    </div>
		<div class="form-group">
			<%= f.label :message, "Event Details" %>
	    	<%= f.text_area :message, placeholder: "Include details about the event. Including role, dress code, duties and training needed.", class: 'form-control', size: "24x6", :required => true %>
	    </div>

	    <div class= "hidden">
	      	<%= f.input :nickname, :hint => 'Leave this field blank!' %>
	    </div>

			<%= hidden_field_tag :ambassador_id, @ambassador.id %>
			<%= hidden_field_tag :ambassador_first_name, @ambassador.first_name %>
			<%= hidden_field_tag :ambassador_last_name, @ambassador.last_name %>
			<%= hidden_field_tag :ambassador_email, @ambassador.email %>
			<%= hidden_field_tag :ambassador_rate, @ambassador.rate %>

      </br>
      	<%= f.button :submit, 'Send message', :class=> "btn btn-lg", id: "how-btn" %>
	    </div>
		<% end %>
	</div>
</div>